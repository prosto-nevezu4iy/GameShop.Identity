@using IdentityServer.Contracts.ViewModels.Account
@model RegisterViewModel

<div>
    <div class="lead">
        <h1>Register</h1>
        <p>Choose how to register</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                        <a class="btn btn-primary" asp-action="Login">Login</a>
                    </form>
                </div>
            </div>
        </div>

        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <h2>External Account</h2>
                        </div>
                        <div class="card-body">
                            <ul class="list-inline">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <li class="list-inline-item">
                                        <a class="btn btn-secondary"
                                            asp-controller="External"
                                            asp-action="Challenge"
                                            asp-route-scheme="@provider.Name"
                                            asp-route-returnUrl="@Model.ReturnUrl">
                                            @provider.DisplayName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }  
    </div>
</div>



