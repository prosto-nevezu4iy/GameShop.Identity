@using IdentityServer.Contracts.ViewModels.Manage
@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<h1>@ViewData["Title"].</h1>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Personal Data: </dt>
        <dd>
            <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="ChangePersonalData">Change</a>&nbsp;&nbsp;]</text>
        </dd>
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="ChangePassword">Change</a>&nbsp;&nbsp;]</text>
            }
            else
            {
                <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="SetPassword">Create</a>&nbsp;&nbsp;]</text>
            }
        </dd>
        <dt>Main WebSite</dt>
        <dd>
            <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="Back">Go Back</a>&nbsp;&nbsp;]</text>
        </dd>
    </dl>
</div>